<h1><%= title %></h1>
<form method="post">
  <div class="form-group">
    <label for="first_name">First Name: </label>
    <input
      type="text"
      name="first_name"
      id="first_name"
      class="form-control"
      placeholder="First name"
      required
      value="<%= author === undefined ? '' : author.first_name %>"
    />
  </div>
  <div class="form-group">
    <label for="family_name">Family Name: </label>
    <input
      type="text"
      name="family_name"
      id="family_name"
      class="form-control"
      placeholder="Family name"
      required
      value="<%= author === undefined ? '' : author.family_name %>"
    />
  </div>
  <div class="form-group">
    <label for="date_of_birth">Date of birth: </label>
    <input
      type="date"
      name="date_of_birth"
      id="date_of_birth"
      class="form-control"
      value="<%= author === undefined ? '' : author.date_of_birth_form_format %>"
    />
  </div>
  <div class="form-group">
    <label for="date_of_death">Date of death: </label>
    <input
      type="date"
      name="date_of_death"
      id="date_of_death"
      class="form-control"
      value="<%= author === undefined ? '' : author.date_of_death_form_format %>"
    />
  </div>
  <button class="btn btn-primary" type="submit">Submit</button>
</form>
<% if(errors) { %>
<ul>
  <% errors.forEach(error => { %>
  <li><%= error.msg %></li>
  <% }) %>
</ul>
<% } %>
